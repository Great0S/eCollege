<!DOCTYPE html>
<html class="mdc-typography">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eCollege</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/css/material-components-web.css" rel="stylesheet" />
        <link href="~/css/material.css" rel="stylesheet" />
        <style>
            :root {
                --mdc-theme-text-hint-on-light: #333;
            }

            body, input, label {
                font-family: Roboto,'Segoe UI';
            }

            body, input, label, h1, h2, h3, h4, h5, h6 {
                font-family: 'Noto Kufi Arabic',Roboto;
            }

            html {
                font-size: 17px;
            }
            button:active {
                background-color:yellow;
            }
        </style>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <link href="~/css/material-components-web.min.css" rel="stylesheet" />
        <link href="~/css/material.min.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <div class="navbar navbar-inverse nav navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mdc-theme--text-primary-on-primary">eCollege</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-inverse navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="" asp-area="" asp-controller="Home" asp-action="About">عن الموقع</a></li>
                        <li><a class="" asp-area="" asp-controller="Home" asp-action="Event">الاحداث</a></li>
                        <li><a class="" asp-area="" asp-controller="TimeTables" asp-action="Index">الجدول الزمني</a></li>
                    }
                    @if (User.IsInRole("Registerator"))
                    {
                        <li><a class="" asp-area="" asp-controller="Scores" asp-action="Index">النتيجة</a></li>
                    }
                    @if (User.IsInRole("Student"))
                    {
                        <li><a class="" asp-area="" asp-controller="Scores" asp-action="StudentIndex">النتيجة</a></li>
                    }
                    @if (User.IsInRole("Administrator"))
                    {
                        <li><a class="" asp-area="" asp-controller="Employees" asp-action="Index">الموظفين</a></li>
                    }
                    @if (User.IsInRole("Registerator"))
                    {
                    <li><a class="" asp-area="" asp-controller="Students" asp-action="Index">الطلاب</a></li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="" asp-area="" asp-controller="Home" asp-action="Index">الصفحة الرئيسية</a></li>
                    }

                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div></div>
        @RenderBody()
        <br />
        <footer>
            <p>&copy; 2017 - eCollege</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/material-components-web.js"></script>
        <script src="~/js/material.js"></script>
        <script>window.mdc.autoInit();</script>
        <script>window.mdl.autoInit();</script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
        <script src="~/js/material-components-web.min.js"></script>
        <script src="~/js/material.min.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
