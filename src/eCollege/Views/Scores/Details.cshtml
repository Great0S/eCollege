@model eCollege.Data.Score

@{
    ViewData["Title"] = "التفاصيل";
}

<div dir="rtl" class="mdc-layout-grid mdc-elevation--z3">
    <div class="mdc-card mdc-layout-grid__cell--span-12 mdl-color--deep-orange sec-bar">
        <h3>تفاصيل النتيجة</h3>
    </div>
    <hr class="mdc-layout-grid__cell--span-12" />
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12 flex">
        <div class="mdc-grid-list">
            <ul class="mdc-grid-list__tiles">
                <li class="mdc-grid-tile">
                    <h4> المعرف</h4>
                    <p>@Html.DisplayFor(model => model.Id)</p>
                </li>
                <li class="mdc-grid-tile">
                    <h4> رقم التسجيل</h4>
                    <p>@Html.DisplayFor(model => model.RegId)</p>
                </li>
                <li class="mdc-grid-tile">
                    <h4>السمستر</h4>
                    <p>@Html.DisplayFor(model => model.Semester)</p>
                </li>
            </ul>
        </div>
        <div class="mdc-grid-list">
            <ul class="mdc-grid-list__tiles">
                <li class="mdc-grid-tile">
                    <h4>المقرر </h4>
                    <p>@Html.DisplayFor(model => model.SubId)</p>
                </li>
                <li class="mdc-grid-tile">
                    <h4>
                        الساعات المعتمدة
                    </h4>
                    <p>@Html.DisplayFor(model => model.Hours)</p>
                </li>
                <li class="mdc-grid-tile">
                    <h4> الدرجة</h4>
                    <p>@Html.DisplayFor(model => model.Grade)</p>
                </li>
            </ul>
        </div>
    </div>

</div>
<div class="mdc-layout-grid">
    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12" style="text-align:center" dir="rtl">
        <a style="font-family:'Segoe UI';text-decoration-line:none" class="mdc-button mdc-button--primary mdc-layout-grid__cell mdc-layout-grid__cell--span-3 mdc-button--raised mdc-ripple-surface" data-mdc-auto-init="MDCRipple" asp-action="Edit" asp-route-id="@Model.Id">تعديل</a>
        <a style="font-family:'Segoe UI';text-decoration-line:none" class="mdc-button mdc-button--raised mdc-ripple-surface mdc-layout-grid__cell mdc-layout-grid__cell--span-2" data-mdc-auto-init="MDCRipple" asp-action="Index">الرجوع الى القائمة</a>
    </div>
</div>
